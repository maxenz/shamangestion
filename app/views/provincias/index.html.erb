<div class="contenedorPrincipal">

  <h2>Provincias de <%= @pais.descripcion %></h2>
  <hr>


<table id="provincias" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>C&oacute;digo</th>
    <th>Descripcion</th>
    <th>Pa&iacute;s</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @provincias.each do |provincia| %>
  <tr>
    <td><%= provincia.codigo %></td>
    <td><%= provincia.descripcion %></td>
    <td><%= provincia.pais.descripcion %></td>
    <td><%= link_to '<i class="icon-search icon-black"></i>'.html_safe, pais_provincia_localidades_path(@pais,provincia) %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_pais_provincia_path(@pais,provincia) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, pais_provincia_path(@pais,provincia), :class => 'delete_element', method: :delete, data: { confirm: 'Seguro que desea eliminar el registro?' }, :remote => true %></td>
  </tr>
<% end %>
</tbody>
</table>

<%= link_to 'Nueva Provincia', new_pais_provincia_path(@pais), :class => 'btn btn-primary' %>
</div>

