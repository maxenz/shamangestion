
<table id="clientesTerminales" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>Tipo</th>
    <th>Valor 1</th>
    <th>Valor 2</th>
    <th>Valor 3</th>
    <th>Valor 4</th>
    <th>Referencia</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @cliente_terminales.each do |terminal| %>
  <tr>
    <td><%= terminal.tipo_terminal.descripcion %></td>
    <td><%= terminal.valor1 %></td>
    <td><%= terminal.valor2 %></td>
    <td><%= terminal.valor3 %></td>
    <td><%= terminal.valor4 %></td>  
    <td><%= terminal.referencia %></td>  
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_cliente_clientes_terminal_path(@cliente,terminal) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, cliente_clientes_terminal_path(@cliente,terminal), :class => 'delete_element', method: :delete, data: { confirm: 'Seguro que desea eliminar el registro?' } %></td>
  </tr>
<% end %>
</tbody>
</table>
<div style="text-align:center;padding-bottom:15px">
<%= link_to 'Agregar Terminal', new_cliente_clientes_terminal_path(@cliente), :class => 'btn btn-info btnNuevo' %>
</div>