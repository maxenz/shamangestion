<div class="contenedorPrincipal">

  <h4>Clientes</h4>
  <hr>


<table id="clientes" class="display" style="border: silver solid 1px; width: 900px; margin-left:auto;margin-right:auto;font-size: 11px;">
  <thead>
  <tr>
    <th>Raz&oacute;n Social</th>
    <th>Email</th>
    <th>Tel&eacute;fono</th>
    <th>Pa&iacute;s</th>
    <th>Provincia</th>
    <th>Localidad</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @clientes.each do |cliente| %>
  <tr>
    <td><%= cliente.razonSocial %></td>
    <td><%= cliente.email %></td>
    <td><%= cliente.telefono %></td>
    <td><%= cliente.localidad.provincia.descripcion %></td>
    <td><%= cliente.localidad.provincia.pais.descripcion %></td>
    <td><%= cliente.localidad.descripcion %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_cliente_path(cliente) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, cliente, :class => 'delete_element', method: :delete, data: { confirm: 'Are you sure?' },:remote => true %></td>
  </tr>
<% end %>
</tbody>
</table>

<%= link_to 'Nuevo Cliente', new_cliente_path, :class => 'btn btn-info btnNuevo' %>
</div>