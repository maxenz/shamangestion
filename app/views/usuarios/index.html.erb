<div class="contenedorPrincipal">

  <h2>Usuarios</h2>
  <hr>
<div style="width:900px;margin-left:auto;margin-right:auto">
<table id="usuarios" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>Usuario</th>
    <th>Apellido</th>
    <th>Nombre</th>
    <th>Email</th>
    <th>Fecha de Nacimiento</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @usuarios.each do |usuario| %>
  <tr>
    <td><%= usuario.descripcion %></td>
    <td><%= usuario.apellido %></td>
    <td><%= usuario.nombre %></td>  
    <td><%= usuario.email %></td>
    <td><%= usuario.fec_nacimiento %></td>           
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_usuario_path(usuario) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, usuario, :class => 'delete_element', method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar el usuario?' } %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<br />

<%= link_to 'Nuevo Usuario', new_usuario_path, :class => 'btn btn-primary' %>

</div>

