<div class="contenedorPrincipal">

  <h2>Tipo de Terminales</h2>
  <hr />
<div style="width:500px;margin-left:auto;margin-right:auto">
<table id="tipoTerminales" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>Tipo de Terminal</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @tipo_terminales.each do |terminal| %>
  <tr>
    <td><%= terminal.descripcion %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_tipo_terminal_path(terminal) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, terminal, method: :delete, data: { confirm: 'Desea eliminar el tipo de terminal?'} %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<br />

<%= link_to 'Nuevo Tipo de Terminal', new_tipo_terminal_path, :class => 'btn btn-primary' %>

</div>

