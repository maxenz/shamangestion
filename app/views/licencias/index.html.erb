<div class="contenedorPrincipal">

  <h4>Licencias</h4>
  <hr />
<div style="width:500px;margin-left:auto;margin-right:auto">
<table id="licencias" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>Serial</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @licencias.each do |licencia| %>
  <tr>
    <td><%= licencia.serial %></td>
    <td><%= link_to '<i class="icon-search icon-black"></i>'.html_safe,'', :remote => true %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_licencia_path(licencia) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, licencia, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<br />

<%= link_to 'Nueva Licencia', new_licencia_path, :class => 'btn btn-info btnNuevo ' %>

</div>


