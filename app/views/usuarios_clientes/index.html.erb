<div class="contenedorPrincipal">

  <h2>Usuarios / Clientes</h2>
  <hr>
  <div style="width:900px;margin-left:auto;margin-right:auto">
    <table id="usuarios_clientes" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
      <thead>
        <tr>
          <th>Usuario</th>
          <th>Cliente</th>
          <th>Shaman Full Id</th>
          <th>Shaman Express Id</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @usuarios_clientes.each do |uscli| %>
          <tr>
            <td><%= uscli.usuario.descripcion %></td>
            <td><%= uscli.cliente.razonSocial %></td>
            <td><%= uscli.shaman_full_id %></td>  
            <td><%= uscli.shaman_express_id %></td>       
            <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_usuarios_cliente_path(uscli) %></td>
            <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, uscli, :class => 'delete_element', method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar el usuario/cliente?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <br />

<%= link_to 'Nuevo Usuario/Cliente', "usuarios_clientes/new?#{@pNew}", :class => 'btn btn-primary' %>

</div>
