<div class="contenedorPrincipal">

  <h4>Pa&iacute;ses</h4>
  <hr />
<div style="text-align:center">
<table id="paises" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>C&oacute;digo</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @paises.each do |pais| %>
  <tr>
    <td><%= pais.codigo %></td>
    <td><%= pais.descripcion %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_pais_path(pais) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, pais, :class => 'delete_element', method: :delete, data: { confirm: 'Are you sure?' },:remote => true %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<%= link_to 'Nuevo Pais', new_pais_path, :class => 'btn btn-info btnNuevo' %>
</div>


