<div class="contenedorPrincipal">

  <h4>Productos</h4>
  <hr>

<table id="productos" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>Nro producto</th>
    <th>Descripcion</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @productos.each do |producto| %>
  <tr>
    <td><%= producto.nro_producto %></td>
    <td><%= producto.descripcion %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_producto_path(producto) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, producto, :class => 'delete_element', method: :delete, data: { confirm: 'Are you sure?' },:remote => true %></td>
  </tr>
<% end %>
</tbody>
</table>

<br />

<%= link_to 'Nuevo Producto', new_producto_path, :class => 'btn btn-info btnNuevo' %>

</div>
