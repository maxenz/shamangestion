<div class="contenedorPrincipal">

  <h4>Localidades</h4>
  <hr>


<table id="localidades" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>C&oacute;digo</th>
    <th>Descripcion</th>
    <th>Pa&iacute;s</th>
    <th>Provincia</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @localidades.each do |localidad| %>
  <tr>
    <td><%= localidad.codigo %></td>
    <td><%= localidad.descripcion %></td>
    <td><%= localidad.provincia.pais.descripcion %></td>
    <td><%= localidad.provincia.descripcion %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_pais_provincia_localidad_path(@pais,@provincia,localidad) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, pais_provincia_localidad_path(@pais,@provincia,localidad), :class => 'delete_element', method: :delete, data: { confirm: 'Are you sure?' },:remote => true %></td>
  </tr>
<% end %>
</tbody>
</table>

<%= link_to 'Nueva Localidad', new_pais_provincia_localidad_path(@pais,@provincia), :class => 'btn btn-info btnNuevo' %>
</div>
