<div class="contenedorPrincipal">

  <h2>Estados</h2>
  <hr />
<div style="width:500px;margin-left:auto;margin-right:auto">
<table id="estados" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered display">
  <thead>
  <tr>
    <th>Nro.</th>
    <th>Estado</th>
    <th></th>
    <th></th>
  </tr>
</thead>
<tbody>
<% @estados.each do |estado| %>
  <tr>
    <td><%= estado.nro_estado %></td>
    <td><%= estado.descripcion %></td>
    <td><%= link_to '<i class="icon-pencil icon-black"></i>'.html_safe, edit_estado_path(estado) %></td>
    <td><%= link_to '<i class="icon-remove icon-black"></i>'.html_safe, estado, method: :delete, data: { confirm: 'Desea eliminar el estado?'} %></td>
  </tr>
<% end %>
</tbody>
</table>
</div>
<br />

<%= link_to 'Nuevo Estado', new_estado_path, :class => 'btn btn-primary' %>

</div>



