    <%= f.input :email, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :label => 'No cerrar sesiÃ³n', :id => 'remember_login', :as => :boolean if devise_mapping.rememberable? %>
